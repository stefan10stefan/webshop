<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lilly021.webshop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuickOK"
        android:networkSecurityConfig="@xml/network_security_config"
        >

        <activity android:name="project.ui.splash.SplashActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="project.ui.main.MainActivity"/>
        <activity android:name="project.ui.login.LoginActivity"/>
        <activity android:name="project.ui.registration.RegistrationActivity"/>
        <activity android:name="project.ui.base.BaseActivity"/>
    </application>

</manifest>